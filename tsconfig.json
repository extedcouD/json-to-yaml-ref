{
	"compilerOptions": {
		"declaration": true, // Generate `.d.ts` type declaration files
		"outDir": "./dist", // Output directory for compiled files
		"module": "commonjs", // Module system
		"target": "es6", // Target ECMAScript version
		"strict": true, // Enable strict type checking
		"esModuleInterop": true // Enable interop with CommonJS modules
	},
	"include": ["src"], // Include the source directory
	"exclude": ["node_modules"] // Exclude unnecessary files
}
